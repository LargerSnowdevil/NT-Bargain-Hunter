<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SignInPage">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:id="@+id/signInEmailEntryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Email" />

            <EditText
                android:id="@+id/signInEmailEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="example@example.com"
                android:drawableLeft= "@drawable/ic_email_black_18dp"
                android:inputType="textEmailAddress" />

            <TextView
                android:id="@+id/signInPageEmailProblemDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#ff0033" />

            <TextView
                android:id="@+id/signInPasswordEntryDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Password" />

            <EditText
                android:id="@+id/signInPasswordEntry"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:ems="10"
                android:hint="Password"
                android:inputType="textPassword" />

            <TextView
                android:id="@+id/signInPasswordProblemDescription"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:textColor="#ff0033" />

            <Button
                android:id="@+id/signInButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="signIn"
                android:text="Sign In" />

            <Button
                android:id="@+id/goToRegisterPageButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToRegisterPage"
                android:text="Register" />

            <Button
                android:id="@+id/signInForgottenPasswordButton"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:onClick="goToForgotPasswordPage"
                android:text="I Forgot My Password" />

        </LinearLayout>
    </ScrollView>
    <android.support.design.widget.BottomNavigationView
        android:id="@+id/userPageFooterNav"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:itemBackground="@color/cardview_light_background"
        app:labelVisibilityMode="labeled"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:menu="@menu/footer_nav_menu" />
</android.support.constraint.ConstraintLayout>